<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Etzi.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.DeviceDefault.DayNight"
    android:background="?android:attr/colorBackground"
    android:orientation="horizontal"
    android:padding="15dp">
        <!-- Fecha -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agenda"
                android:textSize="15dp"
                android:textAlignment="center"
                android:gravity="center"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mayo"
                    android:gravity="center"
                    android:id="@+id/agenda_widget_fecha_mes"
                    android:textSize="20dp"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:gravity="center"
                    android:id="@+id/agenda_widget_fecha_dia"
                    android:textSize="40dp">
                </TextView>
            </LinearLayout>

        </LinearLayout>
         <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content">
                <!--Agenda List View-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--<ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">
                    </ScrollView>-->

                    <include layout="@layout/agenda_widget_item"></include>
                    <include layout="@layout/agenda_widget_item"></include>
                    <include layout="@layout/agenda_widget_item"></include>
                    <include layout="@layout/agenda_widget_item"></include><!--App bar-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_supervised_user_circle_24"
                            android:background="?android:attr/selectableItemBackground"
                            android:tint="?android:attr/colorAccent"
                            />

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:src="@drawable/outline_file_open_24"
                            android:background="?android:attr/selectableItemBackground"
                            android:tint="?android:attr/colorAccent"/>

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:src="@drawable/outline_web_24"
                            android:background="?android:attr/selectableItemBackground"
                            android:tint="?android:attr/colorAccent"/>

                        <!--<ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?android:attr/colorAccent"
                            android:clickable="true"

                            android:contentDescription=""
                            android:src="@drawable/common_full_open_on_phone"/-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
</LinearLayout>