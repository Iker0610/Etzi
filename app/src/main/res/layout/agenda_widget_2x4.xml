<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Etzi.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:orientation="horizontal"
    android:padding="15dp"
    android:theme="@android:style/Theme.DeviceDefault.DayNight">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <!--Agenda List View-->


        <ListView
            android:id="@+id/horario_agenda"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/agenda_widget_msg_iniciar_sesion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Inicia sesión para ver el horario"
            android:textAlignment="center"
            android:visibility="gone" />
        <!--TODO Texto en Strings.xml!-->
        <TextView
            android:id="@+id/agenda_widget_msg_no_clases"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="No hay clases programadas para ese día"
            android:textAlignment="center"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/baseline_supervised_user_circle_24"
            app:tint="?android:attr/colorAccent" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/outline_file_open_24"
            app:tint="?android:attr/colorAccent" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/outline_web_24"
            app:tint="?android:attr/colorAccent" />
    </LinearLayout>

</LinearLayout>