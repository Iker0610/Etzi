<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Etzi.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.DeviceDefault.DayNight"
    android:background="?android:attr/colorBackground"
    android:orientation="horizontal"
    android:padding="15dp">
         <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/horario_agenda">
                    </ListView>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center_vertical"
                 android:gravity="center"
                 android:text="Inicia sesión para ver el horario"
                 android:textAlignment="center"
                 android:visibility="gone"
                 android:id="@+id/agenda_widget_msg_iniciar_sesion"></TextView>
             <!--TODO Texto en Strings.xml!-->
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center_vertical"
                 android:gravity="center"
                 android:text="Inicia sesión para ver el horario"
                 android:textAlignment="center"
                 android:visibility="gone"
                 android:id="@+id/agenda_widget_msg_no_clases"></TextView>
         </LinearLayout>
</LinearLayout>