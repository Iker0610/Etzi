<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Etzi.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:orientation="horizontal"
    android:padding="15dp"
    android:theme="@android:style/Theme.DeviceDefault.DayNight">

    <ListView
        android:id="@+id/horario_agenda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@android:color/transparent"/>

    <TextView
        android:id="@+id/agenda_widget_msg_iniciar_sesion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="Inicia sesión para ver el horario"
        android:textAlignment="center"
        android:visibility="gone" />
    <!--TODO Texto en Strings.xml!-->
    <TextView
        android:id="@+id/agenda_widget_msg_no_clases"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="No hay clases programadas para ese día"
        android:textAlignment="center"
        android:visibility="gone" />
</LinearLayout>